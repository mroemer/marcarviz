extends ./layout.jade

block content
    .header
        h1 Register
        h2 MARCARviz
    .content
        form(role='form', action="/register",method="post", style='max-width: 100%; text-align: center;')
            .form-group
                input.form-control(type='email', name="username", placeholder='Enter Email')
            .form-group
                input.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-primary(type='submit')
                i.fa.fa-check
                | Submit
            a(href='/')
                button.btn.btn-danger(type="button")
                    i.fa.fa-close
                    | Cancel
            br
            if (info)
                h4.alert.alert-danger=info


